@model EquipmentRental.DataAccess.Models.Notification

@{
    ViewData["Title"] = "Notification Details";
}

<h2>Notification Details</h2>

<div class="card mt-4 mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Message</dt>
            <dd class="col-sm-9">@Model.Message</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsRead)
                {
                    <span class="badge bg-secondary">Read</span>
                }
                else
                {
                    <span class="badge bg-primary">Unread</span>
                }
            </dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary">Back to Notifications</a>
    </div>
</div>
