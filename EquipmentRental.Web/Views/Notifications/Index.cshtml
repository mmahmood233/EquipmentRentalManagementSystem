@model IEnumerable<EquipmentRental.DataAccess.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<h2 class="mb-4"><i class="bi bi-bell-fill text-primary"></i> Notifications</h2>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Message</th>
            <th>Type</th>
            <th>Status</th>
            <th>Created At</th>
            <th>User</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.IsRead ? "" : "table-warning")">
                <td>
                    <a asp-action="Details" asp-route-id="@item.NotificationId"
                       class="@(item.IsRead ? "" : "fw-bold") text-decoration-none">
                        @item.Message
                    </a>
                </td>
                <td>@item.Type</td>
                <td>
                    <span class="badge @(item.IsRead ? "bg-secondary" : "bg-success")">
                        @(item.IsRead ? "Read" : "Unread")
                    </span>
                </td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>@item.User?.Email</td>
                <td>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.NotificationId">Edit</a>
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.NotificationId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
