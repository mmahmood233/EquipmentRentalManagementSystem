@model IEnumerable<EquipmentRental.DataAccess.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="@(item.IsRead ? "" : "table-warning")">
                <td>
                    @if (!item.IsRead)
                    {
                        <strong>@item.Message</strong>
                    }
                    else
                    {
                        @item.Message
                    }
                </td>
                <td>@item.Type</td>
                <td>@(item.IsRead ? "Read" : "Unread")</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>@item.User.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.NotificationId">Details</a>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                    {
                        <span> | </span>
                        <a asp-action="Edit" asp-route-id="@item.NotificationId">Edit</a>
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.NotificationId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>

</table>
