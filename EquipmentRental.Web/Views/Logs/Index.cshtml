@model IEnumerable<ProjectDBClassLibrary.Model.Log>

@{
    ViewData["Title"] = "Audit Trails / Logs";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4"> Audit Trails & Logs</h2>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> No logs found.
            </div>
    }
    else
    {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center shadow-sm">
                    <thead class="table-primary">
                        <tr>
                            <th>Timestamp</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Source</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var log in Model)
                    {
                            <tr>
                                <td>@log.TimeStamp.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@log.User.Fullname</td>
                                <td>@log.Action</td>
                                <td>@log.Source</td>
                            </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
</div>
