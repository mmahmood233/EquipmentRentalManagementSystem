@model IEnumerable<ProjectDBClassLibrary.Model.RentalTransaction>

@{
    ViewData["Title"] = "Rental Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var equipmentFilterValue = Context.Request.Query["equipmentFilter"].ToString();
    var paymentStatusFilterValue = Context.Request.Query["paymentStatusFilter"].ToString();
    var searchIdValue = Context.Request.Query["searchId"].ToString();
}

<style>
    .btn-custom {
        background-color: #4a90e2;
        color: white;
        border: none;
    }
    .btn-custom:hover {
        background-color: #3a78c2;
        color: white;
    }
    .badge-status, .badge-condition {
        font-size: 0.85rem;
        padding: 0.4em 0.6em;
    }
    .card-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #4a90e2;
    }
    .info-label {
        font-weight: 500;
        color: #444;
    }
    .card {
        background-color: #fff;
        border-radius: 0.75rem;
        transition: 0.3s ease-in-out;
    }
    .card:hover {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
    }
    .card-footer {
        background-color: transparent;
        border-top: none;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Rental Transaction Records</h2>
    </div>

    <form asp-controller="RentalTransactions" asp-action="Index" method="get" class="bg-white p-4 rounded border shadow-sm mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-semibold">Equipment</label>
                <select name="equipmentFilter" class="form-select" asp-items="ViewBag.EquipmentFilter">
                    <option value=""> All Equipments </option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold">Payment Status</label>
                <select name="paymentStatusFilter" class="form-select" asp-items="ViewBag.PaymentStatusFilter">
                    <option value=""> All Payment Status </option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold">Transaction ID</label>
                <input type="number" name="searchId" class="form-control" value="@searchIdValue" placeholder="Enter Transaction ID" />
            </div>
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-custom">
                    <i class="bi bi-search"></i> Apply Filters
                </button>
            </div>
        </div>
    </form>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> No rental transactions found matching your filters.
            </div>
    }
    else
    {
            <div class="row g-4">
            @foreach (var item in Model)
            {
                var returnInfo = item.ReturnInfos.FirstOrDefault();
                bool showExtraFeeButton = false;
                bool showViewStatementButton = false;

                if (returnInfo != null)
                {
                    double lateFeePerDay = returnInfo.LateReturnFees ?? 0;
                    double extraCharges = returnInfo.AdditionalCharges ?? 0;
                    var expectedReturn = item.RentalTransactionReturnDate.Date;
                    var actualReturn = returnInfo.ReturnDate.Date;
                    int lateDays = Math.Max(0, (actualReturn - expectedReturn).Days);

                    double totalLateFee = (lateFeePerDay * lateDays) + extraCharges;
                    double paidLate = returnInfo.PaidLateFees ?? 0;

                    if (totalLateFee > 0)
                    {
                        showExtraFeeButton = paidLate < totalLateFee;
                        showViewStatementButton = paidLate >= totalLateFee;
                    }
                }

                        <div class="col-md-6">
                            <div class="card shadow-sm h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <h5 class="card-title">@item.User.Fullname</h5>
                                        <small class="text-muted">Created: @item.CreatedAt.ToString("yyyy-MM-dd")</small>
                                    </div>

                                    <div class="row mb-2">
                                        <div class="col-6">
                                            <p><span class="fw-semibold">Transaction ID:</span> @item.RentalTransactionId</p>
                                            <p><span class="fw-semibold">Request ID:</span> @item.RentalRequestId</p>
                                            <p><span class="fw-semibold">Equipment:</span> <span class="text-info">@item.Equipment.Name</span></p>
                                        </div>
                                        <div class="col-6">
                                            <p><span class="fw-semibold">Rental Fee:</span> @item.RentalFee.ToString("C")</p>
                                            <p><span class="fw-semibold">Deposit:</span> @item.Deposit.ToString("C")</p>
                                            <p><span class="fw-semibold">Period:</span> @item.RentalPeriod days</p>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <p class="mb-1 fw-semibold text-secondary">Payment Status:</p>
                                    @if (item.PaymentStatus == "Paid")
                                    {
                                                    <span class="badge bg-success">Paid</span>
                                    }
                                    else if (item.PaymentStatus == "Partially Paid")
                                    {
                                                    <span class="badge bg-warning text-dark">Partially Paid</span>
                                    }
                                    else
                                    {
                                                    <span class="badge bg-danger">Not Paid</span>
                                    }
                                        </div>
                                        <div class="col-md-4">
                                            <p class="mb-1 fw-semibold text-secondary">Equipment Condition:</p>
                                    @if (item.Equipment.ConditionStatus == "N")
                                    {
                                                    <span class="badge bg-success">New</span>
                                    }
                                    else if (item.Equipment.ConditionStatus == "U")
                                    {
                                                    <span class="badge bg-warning text-dark">Used</span>
                                    }
                                    else
                                    {
                                                    <span class="badge bg-secondary">@item.Equipment.ConditionStatus</span>
                                    }
                                        </div>
                                        <div class="col-md-4">
                                            <p class="mb-1 fw-semibold text-secondary">Request Status:</p>
                                    @if (item.RentalRequest.Status == "Approved")
                                    {
                                                    <span class="badge bg-primary">Approved</span>
                                    }
                                    else if (item.RentalRequest.Status == "Pending")
                                    {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else
                                    {
                                                    <span class="badge bg-secondary">@item.RentalRequest.Status</span>
                                    }
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between text-muted small mt-2">
                                        <span><i class="bi bi-calendar-event"></i> Start: @item.RentalTransactionStartDate.ToString("yyyy-MM-dd")</span>
                                        <span><i class="bi bi-calendar-check"></i> Return: @item.RentalTransactionReturnDate.ToString("yyyy-MM-dd")</span>
                                    </div>
                                </div>

                                <div class="card-footer d-flex flex-wrap justify-content-end gap-2">
                            @if ((bool)ViewBag.IsAdminOrManager)
                            {
                <a asp-action="Edit" asp-route-id="@item.RentalTransactionId" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-pencil-fill"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@item.RentalTransactionId" class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-trash-fill"></i> Delete
                </a>

                                @if (showExtraFeeButton)
                                {
                        <a asp-controller="RentalTransactions" asp-action="HandleExtraFee" asp-route-id="@item.RentalTransactionId" class="btn btn-sm btn-warning">
                            <i class="bi bi-cash-coin"></i> Pay Extra Fees
                        </a>
                                }
                            }

                            @if (showViewStatementButton)
                            {
                <a asp-controller="RentalTransactions" asp-action="ViewLateFeeStatement" asp-route-id="@item.RentalTransactionId" class="btn btn-sm btn-success">
                    <i class="bi bi-receipt"></i> View Late Fee Statement
                </a>
                            }


                            @if (!string.IsNullOrEmpty(item.DocumentPath))
                            {
                                            <a asp-action="DownloadDocument" asp-route-id="@item.RentalTransactionId" class="btn btn-sm btn-outline-secondary">
															<i class="bi bi-download"></i> Download Document
                                            </a>
                            }
                                </div>
                            </div>
                        </div>
            }
            </div>
    }
</div>

@if (ViewBag.TotalPages > 1)
{
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage - 1)"
                       asp-route-searchId="@Context.Request.Query["searchId"]"
                       asp-route-equipmentFilter="@Context.Request.Query["equipmentFilter"]"
                       asp-route-paymentStatusFilter="@Context.Request.Query["paymentStatusFilter"]">
                        Previous
                    </a>
                </li>
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchId="@Context.Request.Query["searchId"]"
                               asp-route-equipmentFilter="@Context.Request.Query["equipmentFilter"]"
                               asp-route-paymentStatusFilter="@Context.Request.Query["paymentStatusFilter"]">
                        @i
                            </a>
                        </li>
            }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage + 1)"
                       asp-route-searchId="@Context.Request.Query["searchId"]"
                       asp-route-equipmentFilter="@Context.Request.Query["equipmentFilter"]"
                       asp-route-paymentStatusFilter="@Context.Request.Query["paymentStatusFilter"]">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
}



