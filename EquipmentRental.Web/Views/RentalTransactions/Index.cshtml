@model IEnumerable<EquipmentRental.DataAccess.Models.RentalTransaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>Total Transactions: @Model.Count()</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RentalStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deposit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalRequest)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RentalStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deposit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipment.AvailabilityStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalRequest.Status)
            </td>
               <td>
                @Html.ActionLink("Details", "Details", new { id = item.RentalTransactionId })

                @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                {
                    @: | @Html.ActionLink("Edit", "Edit", new { id = item.RentalTransactionId })
                    @: | @Html.ActionLink("Delete", "Delete", new { id = item.RentalTransactionId })
                }
            </td>

        </tr>
}
    </tbody>
</table>
