@model ProjectDBClassLibrary.Model.RentalTransaction

@{
    ViewData["Title"] = (ViewBag.IsStatement ?? false) ? "Late Fee Statement" : "Handle Extra Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var returnInfo = Model.ReturnInfos.FirstOrDefault();
    int lateDays = ViewBag.LateDays ?? 0;
    double totalLateFee = ViewBag.TotalLateFee ?? 0;
    double alreadyPaid = ViewBag.PaidLateFees ?? 0;
    double remainingDue = ViewBag.TotalExtraDue ?? 0;
    double extraCharges = ViewBag.ExtraCharges ?? 0;
    double lateFeePerDay = ViewBag.LateFeePerDay ?? 0;
    bool isStatement = ViewBag.IsStatement ?? false;
}

<style>
    .statement-card {
        background: #f9fbfd;
        border-left: 6px solid #007bff;
        padding: 30px;
        font-family: 'Segoe UI', sans-serif;
        border-radius: 12px;
    }

    .statement-card h5 {
        font-size: 1.3rem;
        color: #0056b3;
    }

    .statement-label {
        font-weight: 600;
        color: #444;
    }

    .statement-value {
        margin-bottom: 0.7rem;
        font-size: 1.05rem;
    }

    .paid-amount {
        color: #b30000;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .remaining-due {
        color: #000;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .section-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: #007bff;
        margin-bottom: 20px;
    }

    .btn-back {
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
    }
</style>

<div class="container py-4">
    <h2 class="section-title">
        @(isStatement ? "Late Fee Payment Statement" : "Handle Extra Payment")
    </h2>

    <div class="statement-card shadow-sm mb-4">
        <h5>Transaction ID: @Model.RentalTransactionId</h5>
        <div class="statement-value"><span class="statement-label">Customer:</span> @Model.User?.Fullname</div>
        <div class="statement-value"><span class="statement-label">Equipment:</span> @Model.Equipment?.Name</div>
        <hr />
        <div class="statement-value"><span class="statement-label">Expected Return Date:</span> @Model.RentalTransactionReturnDate.ToString("yyyy-MM-dd")</div>
        <div class="statement-value"><span class="statement-label">Actual Return Date:</span> @returnInfo?.ReturnDate.ToString("yyyy-MM-dd")</div>
        <div class="statement-value"><span class="statement-label">Late Fee Per Day:</span> @lateFeePerDay.ToString("C")</div>
        <div class="statement-value"><span class="statement-label">Late Days:</span> @lateDays</div>
        <div class="statement-value"><span class="statement-label">Additional Charges:</span> @extraCharges.ToString("C")</div>
        <div class="statement-value"><span class="statement-label">Total Late Fee + Charges:</span> @totalLateFee.ToString("C")</div>
        <hr />
        <div class="statement-value">
            <span class="statement-label">Paid Late Fees:</span>
            <span class="paid-amount">@alreadyPaid.ToString("C")</span>
        </div>

        @if (!isStatement)
        {
                <div class="statement-value remaining-due">
                    <span class="statement-label">Remaining Balance:</span> @remainingDue.ToString("C")
                </div>
        }
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
            <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                        <p>@error.ErrorMessage</p>
            }
            </div>
    }

    @if (!isStatement)
    {
            <form asp-action="HandleExtraFee" method="post">
                <input type="hidden" asp-for="RentalTransactionId" />
                <div class="mb-3">
                    <label class="form-label fw-semibold">Amount You Want to Pay Now</label>
                    <input type="number" name="extraPaid" class="form-control" step="0.01" min="0" max="@remainingDue" required />
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-cash-coin"></i> Submit Payment
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
    }
    else
    {
            <a asp-action="Index" class="btn btn-secondary btn-back">
                <i class="bi bi-arrow-left"></i> Back to Transactions
            </a>
    }
</div>
