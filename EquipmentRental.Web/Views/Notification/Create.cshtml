@{
    ViewData["Title"] = "Send Notification";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fromCustomerList = ViewBag.FromCustomerList ?? false;
}

<h2 class="fw-bold text-primary">Post Notification</h2>

@if (TempData["Success"] != null)
{
        <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Notification Message</label>
        <textarea name="message" class="form-control" rows="3" required></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Type</label>
        <input name="type" class="form-control" required />
    </div>

    @if (!fromCustomerList)
    {
            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" name="sendToAll" id="sendToAllCheckbox" onchange="toggleCustomerDropdown()" />
                <label class="form-check-label" for="sendToAllCheckbox">Send to All Customers</label>
            </div>
    }

    <div class="mb-3" id="customerDropdown">
        <label class="form-label">Select Specific Customer</label>
        <select name="specificUserId" asp-items="ViewBag.Customers" class="form-select" id="specificUserDropdown"></select>
    </div>

    <button type="submit" class="btn btn-primary">Send Notification</button>
</form>

@section Scripts {
        <script>
            function toggleCustomerDropdown() {
                const checkbox = document.getElementById("sendToAllCheckbox");
                const dropdown = document.getElementById("customerDropdown");
                if (checkbox) {
                    dropdown.style.display = checkbox.checked ? "none" : "block";

                    if (checkbox.checked) {
                        document.getElementById("specificUserDropdown").value = "";
                    }
                }
            }

            toggleCustomerDropdown();
        </script>
}
