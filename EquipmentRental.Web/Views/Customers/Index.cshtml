@model IEnumerable<ProjectDBClassLibrary.Model.User>

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
        <script>
            setTimeout(() => {
                $(".alert").fadeOut("slow");
            }, 5000);
        </script>
}

<style>
    .btn-custom {
        background-color: #4a90e2;
        color: white;
        border: none;
    }

    .btn-custom:hover {
        background-color: #3a78c2;
        color: white;
    }

    .btn-outline-custom {
        border-color: #4a90e2;
        color: #4a90e2;
    }

    .btn-outline-custom:hover {
        background-color: #4a90e2;
        color: white;
    }

    .customer-card {
        background-color: #ffffff;
        border-radius: 0.5rem;
        padding: 1.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table thead {
        background-color: #eaf1fb;
    }

    .alert {
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
    }

    .table-row-custom:hover {
        background-color: #f0f8ff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }
</style>

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Customer List</h2>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" asp-action="Index" class="input-group">
                <input type="text" name="searchName" class="form-control" placeholder="Search by customer name..." value="@ViewBag.SearchName" />
                <button type="submit" class="btn btn-custom">
                    <i class="bi bi-search"></i> Search
                </button>
            </form>
        </div>
    </div>

    <div class="customer-card">
        <div class="table-responsive">
            <table class="table table-hover text-center align-middle mb-0">
                <thead class="table-light fw-semibold text-secondary">
                    <tr>
                        <th>User ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var customer in Model)
                        {
                                    <tr class="table-row-custom">
                                        <td class="fw-medium">@customer.UserId</td>
                                        <td>@customer.Fullname</td>
                                        <td>@customer.Email</td>
                                        <td>
                                            <a asp-controller="Notification" asp-action="Create" asp-route-customerId="@customer.UserId" class="btn btn-sm btn-outline-custom">
                                                <i class="bi bi-send"></i> Notify
                                            </a>
                                        </td>
                                    </tr>
                        }
                    }
                    else
                    {
                            <tr>
                                <td colspan="4" class="text-muted py-4">No customers found.</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchName="@ViewBag.SearchName">Previous</a>
                        </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchName="@ViewBag.SearchName">@i</a>
                                </li>
                    }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchName="@ViewBag.SearchName">Next</a>
                        </li>
                    </ul>
                </nav>
        }
    </div>
</div>
