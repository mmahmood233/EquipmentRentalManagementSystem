@using Microsoft.AspNetCore.Identity
@using AdvancedProgrammingASPProject.Areas.Identity.Data
@using ProjectDBClassLibrary.Model
@using Microsoft.EntityFrameworkCore

@inject UserManager<Users> UserManager
@inject SignInManager<Users> SignInManager
@inject ProjectDBContext DbContext


@{
    var identityUser = await UserManager.GetUserAsync(User);
    var mainUserId = identityUser?.MainUserId;
    var mainUser = mainUserId != null ? await DbContext.Users.FindAsync(mainUserId) : null;
    var isAdminOrManager = mainUser != null && (mainUser.RoleId == 1 || mainUser.RoleId == 3);
    var isCustomer = mainUser != null && mainUser.RoleId == 2;
    int unreadCount = 0;

    if (mainUser != null)
    {
        unreadCount = await DbContext.NotificationUsers
            .Include(nu => nu.Notification)
            .CountAsync(nu =>
                nu.UserId == mainUser.UserId &&
                !nu.Notification.Status &&
                nu.Notification.Type != "General"
            );
    }

}


