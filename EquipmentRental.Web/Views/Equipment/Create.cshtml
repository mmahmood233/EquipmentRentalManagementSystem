@model EquipmentRental.DataAccess.Models.Equipment

@{
    ViewData["Title"] = "Add New Equipment";
}

<h2>@ViewData["Title"]</h2>

@* Show validation errors if any *@
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RentalPrice" class="form-label"></label>
        <input asp-for="RentalPrice" class="form-control" />
        <span asp-validation-for="RentalPrice" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AvailabilityStatus" class="form-label"></label>
        <input asp-for="AvailabilityStatus" class="form-control" />
        <span asp-validation-for="AvailabilityStatus" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConditionStatus" class="form-label"></label>
        <input asp-for="ConditionStatus" class="form-control" />
        <span asp-validation-for="ConditionStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
