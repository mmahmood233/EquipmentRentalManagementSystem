@model List<EquipmentRental.DataAccess.Models.Log>

@{
    ViewData["Title"] = "System Audit Logs";
    var sources = Model.Select(l => l.Source).Distinct().OrderBy(s => s).ToList();
    var actions = Model.Select(l => l.Action).Distinct().OrderBy(a => a).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-journal-text"></i> System Audit Logs</h2>
    <a href="/Admin/Dashboard" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>

<!-- Search and Filter Panel -->
<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Logs</h5>
    </div>
    <div class="card-body">
        <form action="/Admin/Logs" method="get" class="row g-3">
            <div class="col-md-3">
                <label for="user" class="form-label">User</label>
                <input type="text" id="user" name="user" value="@Context.Request.Query["user"]" class="form-control" placeholder="Filter by user name..." />
            </div>
            <div class="col-md-3">
                <label for="action" class="form-label">Action</label>
                <select id="action" name="action" class="form-select">
                    <option value="">-- All Actions --</option>
                    @foreach (var action in actions)
                    {
                        <option value="@action" selected="@(Context.Request.Query["action"] == action)">@action</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="source" class="form-label">Source</label>
                <select id="source" name="source" class="form-select">
                    <option value="">-- All Sources --</option>
                    @foreach (var source in sources)
                    {
                        <option value="@source" selected="@(Context.Request.Query["source"] == source)">@source</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="date" class="form-label">Date</label>
                <input type="date" id="date" name="date" value="@Context.Request.Query["date"]" class="form-control" />
            </div>
            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-filter"></i> Apply Filters
                </button>
                <a href="/Admin/Logs" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Logs Table -->
<div class="card">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Audit Log Entries</h5>
        <span class="badge bg-primary">@Model.Count Entries</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>User</th>
                        <th>Action</th>
                        <th>Source</th>
                        <th>Details</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>
                                    @if (log.User != null)
                                    {
                                        <span class="badge bg-info text-dark">@log.User.FullName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">System</span>
                                    }
                                </td>
                                <td>
                                    @switch (log.Action)
                                    {
                                        case "Login":
                                            <span class="badge bg-success">Login</span>
                                            break;
                                        case "Logout":
                                            <span class="badge bg-secondary">Logout</span>
                                            break;
                                        case "Create":
                                            <span class="badge bg-primary">Create</span>
                                            break;
                                        case "Update":
                                            <span class="badge bg-warning text-dark">Update</span>
                                            break;
                                        case "Delete":
                                            <span class="badge bg-danger">Delete</span>
                                            break;
                                        case "Error":
                                            <span class="badge bg-danger">Error</span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark">@log.Action</span>
                                            break;
                                    }
                                </td>
                                <td>@log.Source</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(log.Exception))
                                    {
                                        @(log.Exception.Length > 50 ? log.Exception.Substring(0, 47) + "..." : log.Exception)
                                    }
                                    else
                                    {
                                        <span class="text-muted">No details</span>
                                    }
                                </td>
                                <td>@log.Timestamp.ToString("g")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle me-2"></i> No log entries found matching your criteria.
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        <nav aria-label="Logs pagination" class="d-flex justify-content-center">
            <ul class="pagination mb-0">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)@ViewBag.QueryString" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" href="?page=@i@ViewBag.QueryString">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)@ViewBag.QueryString" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
