@model IEnumerable<ProjectDBClassLibrary.Model.Equipment>

@using Microsoft.AspNetCore.Identity
@using AdvancedProgrammingASPProject.Areas.Identity.Data

@inject UserManager<Users> UserManager
@inject ProjectDBClassLibrary.Model.ProjectDBContext MainDb

@if (TempData["Error"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
}


@{
    ViewData["Title"] = "Equipment List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var user = User.Identity;
    var currentUser = UserManager.GetUserAsync(User).Result;
    var roleId = currentUser?.MainUserId != null ? MainDb.Users.FirstOrDefault(u => u.UserId == currentUser.MainUserId)?.RoleId : null;

    bool isAdminOrManager = roleId == 1 || roleId == 3;
    bool isCustomer = roleId == 2;
    bool isGuest = !user.IsAuthenticated;

    var createMessage = ViewBag.CreateMessage as string;
    var deleteMessage = ViewBag.DeleteMessage as string;



    var categoryFilterValue = Context.Request.Query["categoryFilter"].ToString();
    var statusFilterValue = Context.Request.Query["statusFilter"].ToString();
    var searchNameValue = Context.Request.Query["searchName"].ToString();
}

@section Scripts {
          <script>
        setTimeout(() => {
            $(".alert").fadeOut();
        }, 5000);
    </script>

}

<style>
    .btn-custom {
        background-color: #4a90e2;
        color: white;
        border: none;
    }
    .btn-custom:hover {
        background-color: #3a78c2;
        color: white;
    }
    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #4a90e2;
    }
    .info-label {
        font-weight: 500;
        color: #444;
    }
    .card {
        background-color: #fff !important;
        border-radius: 0.5rem;
    }
    .card-footer {
        background-color: transparent;
        border-top: none;
    }
    .badge {
        font-size: 0.85rem;
        padding: 0.4em 0.6em;
    }
</style>

<div class="container py-4">
    @if (!string.IsNullOrEmpty(createMessage))
    {
            <div class="alert alert-success d-flex align-items-center gap-2">
                <i class="bi bi-check-circle-fill"></i>
                <span>@createMessage</span>
            </div>
    }
    @if (!string.IsNullOrEmpty(deleteMessage))
    {
            <div class="alert alert-danger d-flex align-items-center gap-2">
                <i class="bi bi-trash-fill"></i>
                <span>@deleteMessage</span>
            </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"> Equipment Inventory</h2>
        @if (isAdminOrManager)
        {
                <a asp-action="Create" class="btn btn-custom">
                    <i class="bi bi-plus-circle"></i> Add Equipment
                </a>
        }
    </div>

    <form asp-controller="Equipments" asp-action="Index" method="get" class="row g-3 bg-light p-4 rounded shadow-sm mb-4">
        <div class="col-md-3">
            <label class="form-label fw-semibold">Category</label>
            <select name="categoryFilter" class="form-select" asp-items="ViewBag.CategoryFilter">
                <option value=""> All Categories </option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">Status</label>
            <select name="statusFilter" class="form-select" asp-items="ViewBag.StatusFilter">
                <option value=""> All Statuses </option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">Search by Name</label>
            <input type="text" name="searchName" class="form-control" value="@searchNameValue" placeholder="Enter equipment name" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-custom w-100">
                <i class="bi bi-search"></i> Filter
            </button>
        </div>
    </form>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> No equipment found matching your criteria.
            </div>
    }
    else
    {
            <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <img src="@Url.Content(string.IsNullOrEmpty(item.ImagePath) ? "~/images/equipment-placeholder.png" : "~/uploads/" + item.ImagePath)"
                                     class="card-img-top"
                                     alt="Equipment Image"
                                     style="width: 100%; aspect-ratio: 1 / 1; object-fit: cover; border-bottom: 1px solid #ccc;" />

                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">@item.Description</p>
                                    <p><span class="info-label">Price:</span> @item.RentalPrice.ToString("C")</p>
                                    <p><span class="info-label">Status:</span>
                                @if (item.AvailabilityStatus)
                                {
                                                <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                                <span class="badge bg-danger">Unavailable</span>
                                }
                                    </p>
                                    <p><span class="info-label">Condition:</span> @item.ConditionStatus</p>
                                    <p><span class="info-label">Quantity:</span> @item.Quantity</p>
                                    <p><span class="info-label">Category:</span> @item.Category?.CategoryName</p>
                                </div>

                                <div class="card-footer d-flex flex-wrap justify-content-end gap-2">
                            @if (isAdminOrManager)
                            {
                                            <a asp-action="Edit" asp-route-id="@item.EquipmentId" class="btn btn-sm btn-custom">
                                                <i class="bi bi-pencil-fill"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.EquipmentId" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-trash-fill"></i> Delete
                                            </a>
                            }


                                    <a asp-controller="Feedbacks" asp-action="Index" asp-route-equipmentId="@item.EquipmentId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-chat-dots"></i> Comments
                                    </a>

                            @if (!item.AvailabilityStatus)
                            {
                           <a asp-controller="RentalRequests" asp-action="Create" asp-route-equipmentId="@item.EquipmentId" class="btn btn-sm btn-secondary">
                <i class="bi bi-clock"></i> Book Once Available
            </a>

                            }
                            else if (isGuest)
                            {
                <a href="/Identity/Account/Login?ReturnUrl=/Equipments/Index" class="btn btn-sm btn-warning">
                    <i class="bi bi-box-arrow-in-right"></i> Login to Book
                </a>
                            }
                            else
                            {
                <a asp-controller="RentalRequests" asp-action="Create" asp-route-equipmentId="@item.EquipmentId" class="btn btn-sm btn-custom">
                    <i class="bi bi-calendar-plus"></i> Book
                </a>
                            }

                                </div>
                            </div>
                        </div>
            }
            </div>
    }
</div>
@if (ViewBag.TotalPages > 1)
{
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage - 1)"
                       asp-route-categoryFilter="@Context.Request.Query["categoryFilter"]"
                       asp-route-statusFilter="@Context.Request.Query["statusFilter"]"
                       asp-route-searchName="@Context.Request.Query["searchName"]">
                        Previous
                    </a>
                </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-categoryFilter="@Context.Request.Query["categoryFilter"]"
                               asp-route-statusFilter="@Context.Request.Query["statusFilter"]"
                               asp-route-searchName="@Context.Request.Query["searchName"]">
                        @i
                            </a>
                        </li>
            }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage + 1)"
                       asp-route-categoryFilter="@Context.Request.Query["categoryFilter"]"
                       asp-route-statusFilter="@Context.Request.Query["statusFilter"]"
                       asp-route-searchName="@Context.Request.Query["searchName"]">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
}

