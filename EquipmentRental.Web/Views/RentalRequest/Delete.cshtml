@model EquipmentRental.DataAccess.Models.RentalRequest
@{
    ViewData["Title"] = "Delete Rental Request";
}

<h2>Delete Rental Request</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this rental request for <strong>@Model.Equipment.Name</strong>?</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Rental Dates:</strong> @Model.RentalStartDate.ToShortDateString() - @Model.RentalEndDate.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="RentalRequestId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
