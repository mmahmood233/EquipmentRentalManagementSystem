@model IEnumerable<ProjectDBClassLibrary.Model.Category>

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isAdminOrManager = ViewBag.IsAdminOrManager != null && (bool)ViewBag.IsAdminOrManager;
}

@section Scripts {
        <script>
            setTimeout(() => {
                $(".alert").fadeOut("slow");
            }, 5000);
        </script>
}

<style>
    .btn-custom {
        background-color: #4a90e2;
        color: white;
        border: none;
    }

    .btn-custom:hover {
        background-color: #3a78c2;
        color: white;
    }

    .btn-outline-custom {
        border-color: #4a90e2;
        color: #4a90e2;
    }

    .btn-outline-custom:hover {
        background-color: #4a90e2;
        color: white;
    }

    .category-card {
        background-color: #ffffff;
        border-radius: 0.5rem;
        padding: 1.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table thead {
        background-color: #eaf1fb;
    }

    .alert {
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
    }
</style>

<div class="container py-4">
    @if (TempData["CreateMessage"] != null)
    {
            <div class="alert alert-success d-flex align-items-center gap-2">
                <i class="bi bi-check-circle-fill"></i>
                <span>@TempData["CreateMessage"]</span>
            </div>
    }

    @if (TempData["DeleteMessage"] != null)
    {
            <div class="alert alert-danger d-flex align-items-center gap-2">
                <i class="bi bi-trash-fill"></i>
                <span>@TempData["DeleteMessage"]</span>
            </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"> Equipment Categories</h2>
        @if (isAdminOrManager)
        {
                <a asp-action="Create" class="btn btn-custom">
                    <i class="bi bi-plus-circle"></i> Add Category
                </a>
        }
    </div>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle-fill"></i> No categories found.
            </div>
    }
    else
    {
            <div class="category-card">
                <div class="table-responsive">
                    <table class="table table-hover text-center align-middle mb-0">
                        <thead class="table-light fw-semibold text-secondary">
                            <tr>
                                <th>Category Name</th>
                            @if (isAdminOrManager)
                            {
                                        <th style="width: 200px;">Actions</th>
                            }
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                                    <tr>
                                        <td class="fw-medium">@item.CategoryName</td>
                                @if (isAdminOrManager)
                                {
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-custom me-1">
                                                        <i class="bi bi-pencil-fill"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash-fill"></i>
                                                    </a>
                                                </td>
                                }
                                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
    }
</div>
