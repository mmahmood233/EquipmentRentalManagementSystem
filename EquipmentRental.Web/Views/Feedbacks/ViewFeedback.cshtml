@model ProjectDBClassLibrary.Model.FeedBack

@{
    ViewData["Title"] = "Your Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Feedback for: @Model.Equipment.Name</h5>
        </div>
        <div class="card-body">
            <p><strong>Rating:</strong> @Model.Rating</p>
            <p><strong>Comment:</strong> @Model.Comment</p>
            <p><strong>Date:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>

            @if (Model.Replies.Any())
            {
                    <div class="mt-4">
                        <h6 class="text-muted">Replies:</h6>
                    @foreach (var reply in Model.Replies)
                    {
                                <div class="border-start ps-3 mt-2" style="font-size: 0.9rem; color: #555;">
                                    <p><i class="bi bi-reply-fill"></i> <strong>Admin/Manager:</strong> @reply.Comment</p>
                                    <p class="text-muted" style="font-size: 0.8rem;">@reply.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                                </div>
                    }
                    </div>
            }
        </div>
    </div>
</div>
