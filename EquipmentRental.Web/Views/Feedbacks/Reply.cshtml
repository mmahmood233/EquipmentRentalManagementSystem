@model ProjectDBClassLibrary.Model.FeedBack

@{
    ViewData["Title"] = "Reply to Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-primary mb-4"> Reply to Comment</h2>

            <div class="mb-4 p-3 border rounded bg-light">
                <p><strong>Original Comment by:</strong> @Model.ParentFeedback?.User?.Fullname</p>
                <blockquote class="blockquote">@Model.ParentFeedback?.Comment</blockquote>
            </div>

            <form asp-action="Reply" method="post">
               <input type="hidden" name="parentId" value="@Model.ParentFeedbackId" />
                <input type="hidden" name="equipmentId" value="@Model.EquipmentId" />


                <div class="form-group mb-3">
                    <label asp-for="Comment" class="form-label fw-semibold">Your Reply</label>
                    <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                

                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-reply"></i> Submit Reply
                </button>
                <a asp-action="Index" asp-route-equipmentId="@Model.EquipmentId" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}