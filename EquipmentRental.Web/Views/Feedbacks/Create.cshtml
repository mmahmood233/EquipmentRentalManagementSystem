@model EquipmentRental.DataAccess.Models.Feedback

@{
    ViewData["Title"] = "Leave Feedback";
}

<h2>Leave Feedback</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EquipmentId">Select Equipment</label>
        <select asp-for="EquipmentId" class="form-control" asp-items="ViewBag.EquipmentId"></select>
    </div>

    <div class="form-group">
        <label asp-for="Rating">Rating (1–5)</label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
    </div>

    <div class="form-group">
        <label asp-for="CommentText">Comment</label>
        <textarea asp-for="CommentText" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Submit Feedback</button>
</form>
