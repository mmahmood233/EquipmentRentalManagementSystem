@model IEnumerable<EquipmentRental.Web.Controllers.EquipmentFeedbackViewModel>

@{
    ViewData["Title"] = "Equipment with Feedback";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-list"></i> View All Feedback
        </a>
    </div>
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No equipment with feedback available yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">@item.Equipment.Name</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex align-items-center mb-2">
                                    <div class="me-2">
                                        <strong>Rating:</strong>
                                    </div>
                                    <div class="d-flex">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= Math.Round(item.AverageRating))
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted"></i>
                                            }
                                        }
                                    </div>
                                    <div class="ms-2 text-muted">
                                        (@item.AverageRating.ToString("F1"))
                                    </div>
                                </div>
                                <p><strong>Feedback Count:</strong> @item.FeedbackCount</p>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Category:</strong> @item.Equipment.Category?.CategoryName</p>
                                    <p><strong>Condition:</strong> @item.Equipment.ConditionStatus</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Price:</strong> $@item.Equipment.RentalPrice.ToString("F2")/day</p>
                                    <p><strong>Status:</strong> <span class="badge @(item.Equipment.AvailabilityStatus == "Available" ? "bg-success" : "bg-warning")">@item.Equipment.AvailabilityStatus</span></p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <a asp-action="Index" asp-route-equipmentId="@item.Equipment.EquipmentId" class="btn btn-primary w-100">
                                <i class="bi bi-chat-square-text"></i> View Feedback
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
