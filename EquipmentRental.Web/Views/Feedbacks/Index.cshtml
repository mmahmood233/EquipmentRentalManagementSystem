@model IEnumerable<ProjectDBClassLibrary.Model.FeedBack>

@{
    ViewData["Title"] = "Comments";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var equipmentName = ViewBag.EquipmentName as string;
    var equipmentId = ViewBag.EquipmentId;
    var showHidden = ViewBag.ShowHidden != null && (bool)ViewBag.ShowHidden;
    var isAdminOrManager = ViewBag.IsAdminOrManager != null && (bool)ViewBag.IsAdminOrManager;
}

@if (TempData["Message"] != null)
{
        <div class="alert alert-success">
        @TempData["Message"]
        </div>
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3">Comments for: @equipmentName</h2>

    <a asp-action="Index" asp-controller="Equipments" class="btn btn-sm btn-outline-secondary mb-3">
        <i class="bi bi-arrow-left"></i> Back to Equipment
    </a>

    @if (isAdminOrManager)
    {
            <form asp-action="Index" asp-controller="Feedbacks" method="get" class="mb-4">
                <input type="hidden" name="equipmentId" value="@equipmentId" />
                <button type="submit" name="showHidden" value="@(showHidden ? "false" : "true")" class="btn btn-sm @(showHidden ? "btn-primary" : "btn-outline-primary")">
                @(showHidden ? "Hide Hidden Comments" : "Show Hidden Comments")
                </button>
            </form>
    }

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">
                <i class="bi bi-chat"></i> No @(showHidden ? "hidden" : "visible") comments found for this equipment.
            </div>
    }
    else
    {
            <div class="list-group">
            @foreach (var comment in Model)
            {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@comment.User.Fullname</strong>
                                    <small class="text-muted">(@comment.CreatedAt.ToString("g"))</small>
                                    <div>@comment.Comment</div>
                                </div>

                        @if (isAdminOrManager)
                        {
                                        <div class="d-flex gap-2">
                                            <a asp-action="Reply" asp-route-id="@comment.FeedbackId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-reply"></i> Reply
                                            </a>

                                @if (comment.IsHidden)
                                {
                                                    <form asp-action="Unhide" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@comment.FeedbackId" />
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="bi bi-eye"></i> Unhide
                                                        </button>
                                                    </form>
                                }
                                else
                                {
                                                    <form asp-action="Hide" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@comment.FeedbackId" />
                                                        <button type="submit" class="btn btn-sm btn-warning">
                                                            <i class="bi bi-eye-slash"></i> Hide
                                                        </button>
                                                    </form>
                                }
                                        </div>
                        }
                            </div>

                    @if (comment.Replies != null && comment.Replies.Any(r => r.IsHidden == showHidden))
                    {
                                    <div class="mt-3 ms-4 border-start ps-3">
                            @foreach (var reply in comment.Replies.Where(r => r.IsHidden == showHidden))
                            {
                                                <div class="p-2 mb-2 rounded" style="background-color:#f9f9f9; font-size:0.95em;">
                                                    <strong class="text-primary">@reply.User.Fullname</strong>
                                                    <small class="text-muted">(@reply.CreatedAt.ToString("g"))</small>
                                                    <div class="text-muted fst-italic">@reply.Comment</div>
                                                </div>
                            }
                                    </div>
                    }
                        </div>
            }
            </div>
    }
</div>
