@model IEnumerable<EquipmentRental.DataAccess.Models.Feedback>

<h2>Feedbacks</h2>

<table class="table">
    <thead>
        <tr>
            <th>Equipment</th>
            <th>User</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Visible</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feedback in Model)
        {
            <tr class="@(feedback.IsVisible == true ? "" : "table-secondary")">
                <td>@feedback.Equipment.Name</td>
                <td>@feedback.User.Email</td>
                <td>@feedback.Rating</td>
                <td>@feedback.CommentText</td>
                <td>@feedback.CreatedAt.ToString("g")</td>
                <td>@(feedback.IsVisible == true ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@feedback.FeedbackId">Details</a>
                    @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                    {
                        <span> | </span>
                        <a asp-action="Edit" asp-route-id="@feedback.FeedbackId">Edit</a>
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@feedback.FeedbackId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
