@model IEnumerable<ProjectDBClassLibrary.Model.ReturnInfo>

@{
    ViewData["Title"] = "Rental Return Information";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var paymentStatusFilterValue = Context.Request.Query["paymentStatusFilter"].ToString();
    var conditionFilterValue = Context.Request.Query["conditionFilter"].ToString();
    var returnIdSearchValue = Context.Request.Query["returnIdSearch"].ToString();
}

<style>
    .btn-custom {
        background-color: #4a90e2;
        color: white;
        border: none;
    }

    .btn-custom:hover {
        background-color: #3a78c2;
    }

    .badge-status, .badge-condition {
        font-size: 0.85rem;
        padding: 0.4em 0.6em;
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #4a90e2;
    }

    .info-label {
        font-weight: 500;
        color: #444;
    }

    .card {
        background-color: #fff !important;
        border-radius: 0.75rem;
        transition: 0.3s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .card-footer {
        background-color: transparent;
        border-top: none;
    }
</style>

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">Rental Return Records</h2>

    <!-- Filters -->
    <form asp-controller="ReturnInfoes" asp-action="Index" method="get" class="row g-3 bg-light p-4 rounded shadow-sm mb-4">
        <div class="col-md-3">
            <label class="form-label fw-semibold">Payment Status</label>
            <select name="paymentStatusFilter" class="form-select" asp-items="ViewBag.PaymentStatusFilter">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">Return Condition</label>
            <select name="conditionFilter" class="form-select" asp-items="ViewBag.ConditionFilter">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">Return ID</label>
            <input type="number" name="returnIdSearch" class="form-control" value="@returnIdSearchValue" placeholder="Enter ID" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-custom w-100">
                <i class="bi bi-search"></i> Apply Filters
            </button>
        </div>
    </form>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> No return records found.
            </div>
    }
    else
    {
            <div class="row g-4">
            @foreach (var item in Model)
            {
                var paymentStatus = item.Transaction?.PaymentStatus?.Trim().ToLower();
                var returnCondition = item.ReturnCondition?.Trim();
                var expectedReturn = item.Transaction?.RentalTransactionReturnDate.Date ?? DateTime.MinValue;
                var actualReturn = item.ReturnDate.Date;
                var lateDays = Math.Max(0, (actualReturn - expectedReturn).Days);
                var lateFeePerDay = item.LateReturnFees ?? 0;
                var totalLateFee = lateFeePerDay * lateDays;

                    <div class="col-md-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <h5 class="card-title">Return #@item.ReturnId</h5>
                                    <small class="text-muted">Created: @item.CreatedAt.ToString("yyyy-MM-dd")</small>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <p class="mb-1"><span class="fw-semibold">Transaction ID:</span> @item.TransactionId</p>
                                        <p class="mb-1"><span class="fw-semibold">Return Date:</span> @item.ReturnDate.ToString("yyyy-MM-dd")</p>
                                        <p class="mb-1"><span class="fw-semibold">Late Days:</span> @lateDays</p>
                                        <p class="mb-1"><span class="fw-semibold">Total Late Fee:</span> @totalLateFee.ToString("C")</p>
                                    </div>
                                    <div class="col-6">
                                        <p class="mb-1"><span class="fw-semibold">Extra Charges:</span> @(item.AdditionalCharges?.ToString("C") ?? "None")</p>

                                        <p class="mb-1">
                                            <span class="fw-semibold">Payment Status:</span>
                                        @if (paymentStatus == "paid")
                                        {
                                                    <span class="badge bg-success">Paid</span>
                                        }
                                        else if (paymentStatus == "partially paid")
                                        {
                                                    <span class="badge bg-warning text-dark">Partially Paid</span>
                                        }
                                        else
                                        {
                                                    <span class="badge bg-danger">Not Yet</span>
                                        }
                                        </p>

                                        <p class="mb-1">
                                            <span class="fw-semibold">Condition:</span>
                                        @if (returnCondition == "On Time in Good Condition")
                                        {
                                                    <span class="badge bg-success">On Time</span>
                                        }
                                        else if (returnCondition?.ToLower().Contains("late") == true)
                                        {
                                                    <span class="badge bg-warning text-dark">Late</span>
                                        }
                                        else if (returnCondition == "Returned with Damage" || returnCondition == "Damaged")
                                        {
                                                    <span class="badge bg-danger"><i class="bi bi-exclamation-triangle"></i> Damaged</span>
                                        }
                                        else if (returnCondition == "Lost")
                                        {
                                                    <span class="badge bg-dark text-light"><i class="bi bi-x-octagon"></i> Lost</span>
                                        }
                                        else
                                        {
                                                    <span class="badge bg-secondary">@returnCondition</span>
                                        }
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer d-flex justify-content-end gap-2">
                            @if ((bool)ViewBag.IsAdminOrManager)
                            {
                                        <a asp-action="Edit" asp-route-id="@item.ReturnId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil-fill"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ReturnId" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                            }
                            </div>
                        </div>
                    </div>
            }
            </div>
    }
</div>

<!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
        <nav class="mt-4" aria-label="Pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage - 1)"
                       asp-route-returnIdSearch="@returnIdSearchValue"
                       asp-route-paymentStatusFilter="@paymentStatusFilterValue"
                       asp-route-conditionFilter="@conditionFilterValue">
                        Previous
                    </a>
                </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-returnIdSearch="@returnIdSearchValue"
                               asp-route-paymentStatusFilter="@paymentStatusFilterValue"
                               asp-route-conditionFilter="@conditionFilterValue">@i</a>
                        </li>
            }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage + 1)"
                       asp-route-returnIdSearch="@returnIdSearchValue"
                       asp-route-paymentStatusFilter="@paymentStatusFilterValue"
                       asp-route-conditionFilter="@conditionFilterValue">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
}
