@model IEnumerable<ProjectDBClassLibrary.Model.RentalRequest>

@using ProjectDBClassLibrary.Model
@using Microsoft.AspNetCore.Identity
@using AdvancedProgrammingASPProject.Areas.Identity.Data
@inject UserManager<Users> UserManager
@inject ProjectDBClassLibrary.Model.ProjectDBContext Db

@{
    ViewData["Title"] = "My Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var identityUser = await UserManager.GetUserAsync(User);
    var mainUserId = identityUser?.MainUserId;
}

<style>
    .cart-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #fff;
        border-radius: 0.6rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        margin-bottom: 20px;
        padding: 20px;
    }

    .cart-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 0.4rem;
        border: 1px solid #ccc;
        margin-right: 20px;
    }

    .cart-details {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .cart-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #5a6c8c;
        margin-bottom: 6px;
    }

    .cart-meta {
        font-size: 0.95rem;
        color: #444;
        margin-bottom: 3px;
    }

    .cart-price {
        font-size: 1.2rem;
        font-weight: bold;
        color: #4a90e2;
        margin-top: 8px;
    }

    .cart-actions {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 8px;
    }

    .btn-feedback, .btn-view, .btn-delete {
        border: none;
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.9rem;
        text-align: center;
    }

    .btn-feedback {
        background-color: #4a90e2;
        color: #fff;
    }

    .btn-feedback:hover {
        background-color: #3a78c2;
    }

    .btn-view {
        background-color: #17a2b8;
        color: #fff;
    }

    .btn-view:hover {
        background-color: #138496;
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }
</style>

<div class="container mt-4">
    <h2 class="fw-bold mb-4 text-primary">My Orders</h2>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center">You have no items in your orders.</div>
    }
    else
    {
        foreach (var item in Model)
        {
            var feedback = Db.FeedBacks
                .FirstOrDefault(f => f.UserId == mainUserId && f.EquipmentId == item.EquipmentId && f.ParentFeedbackId == null && !f.IsHidden);

                    <div class="cart-card">
                        <img src="@Url.Content(string.IsNullOrEmpty(item.Equipment.ImagePath) ? "~/images/equipment-placeholder.png" : "~/uploads/" + item.Equipment.ImagePath)"
                             class="cart-image"
                             alt="@item.Equipment.Name" />

                        <div class="cart-details">
                            <div class="cart-title">@item.Equipment.Name</div>
                            <div class="cart-meta"><strong>Description:</strong> @item.Equipment.Description</div>
                            <div class="cart-meta"><strong>Start:</strong> @item.StartDate.ToString("yyyy-MM-dd")</div>
                            <div class="cart-meta"><strong>Return:</strong> @item.ReturnDate.ToString("yyyy-MM-dd")</div>
                            <div class="cart-meta"><strong>Status:</strong> @item.Status</div>
                            <div class="cart-price">$@item.TotalCost.ToString("F2")</div>
                        </div>

                        <div class="cart-actions">
                                    <a asp-controller="Feedbacks" asp-action="CreateFeedback"
                               asp-route-equipmentId="@item.Equipment.EquipmentId"
                               class="btn btn-feedback">
                                <i class="bi bi-chat-dots"></i> Feedback
                            </a>

                    @if (feedback != null)
                    {
                                    <a asp-controller="Feedbacks" asp-action="ViewFeedback"
                                       asp-route-equipmentId="@item.EquipmentId"
                                       class="btn btn-view">
                                        <i class="bi bi-eye"></i> View Feedback
                                    </a>

                                               <form asp-controller="Feedbacks" asp-action="DeleteFeedback" method="post" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                <input type="hidden" name="feedbackId" value="@feedback.FeedbackId" />
                <button type="submit" class="btn btn-delete">
                    <i class="bi bi-trash3"></i> Delete
                </button>
            </form>

                    }
                        </div>
                    </div>
        }
    }
</div>
